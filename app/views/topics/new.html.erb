<h1>Create Topic</h1>
<%= form_with(model: @topic, local: true) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control" %>
  <hr>
  <%= f.label :icon %>
  <%= f.text_field :icon, class: "form-control" %>
  <small>A link to an SVG icon image</small>
  <hr>
  <%= f.submit class: "btn btn-info mt-2" %>
<% end %>
