<div class="projects-show">
  <div id="projects-show-header"
  main-image="<%= @project.main_image_url %>"></div>
  <div class="container">
    <div class="projects-show-title">
      <h2><%= @project.title %></h2>
      <h5><%= @project.subtitle %></h5>
    </div>
    <style>
      <%= ::Rouge::Themes::Gruvbox.mode(:light).render(scope: '.highlight') %>
    </style>
    <p><%= markdown @project.body %></p>
    <% if logged_in?(:site_admin) %>
      <div>
        <%= link_to "Edit project", edit_project_path(@project), class: "btn btn-warning" %>
        <%= link_to "Delete project", project_path(@project), method: :delete, data: {confirm: "Are you sure you want to delete this project?"}, class: "btn btn-danger" %>
      </div>
    <% end %>
  </div>
</div>
