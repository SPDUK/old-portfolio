<%= form_with(model: project, local: true) do |form| %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :subtitle %>
        <%= form.text_area :subtitle, class: "form-control" %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :body %>
        <%= form.text_area :body, class: "form-control", rows: 10 %>
      </div>
    </div>
  </div>
  <%# form within a form for nested attributes, 
  from accepts_nested_attributes_for in controller, 
  creates a field for each of the built technologies  %>
  <hr>
  <div class="col-md-12">
    <h2>Technologies Used</h2>
    <div>
      <%= form.fields_for :technologies do |technology_form|  %>
        <div class="form-group">
          <%= technology_form.label :name %>
          <%= technology_form.text_field :name, class: "form-control" %>
        </div>
      <% end %>
    </div>
    <div class="form-group">
      <%= form.submit 'Save Project', class: "btn btn-primary btn-block" %>
    </div>
  </div>
<% end %>
