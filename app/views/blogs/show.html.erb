<div class="col-sm-8 blog-main">
  <h2><%= @blog.title %></h2>
  <nav class="breadcrumb d-flex" aria-label="breadcrumb">
    <%= link_to "Blogs", blogs_path, class: "breadcrumb-item" %>
    <%= link_to @blog.topic.title, topic_path(@blog.topic), class: "breadcrumb-item" %>
    <span class="breadcrumb-item active"><%= @blog.title %></span>
    <%= link_to fa_icon('pencil'),  edit_blog_path(@blog), 
        class: "ml-auto mr-3" if logged_in?(:site_admin) %>
    <%= link_to fa_icon('trash'),
         @blog, method: :delete,
         data: {confirm: "Are you sure you want to delete this blog post?"} if logged_in?(:site_admin) %>
  </nav>
  <p><%= @blog.topic.title %></p>
  <%= link_to 'Edit', edit_blog_path(@blog) if logged_in?(:site_admin) %>
  <%# TODO: make this a toggle switch or use JS somehow %>
  <style>
    <%= ::Rouge::Themes::Base16.mode(:dark).render(scope: '.highlight') %>
  </style>
  <p><%= markdown @blog.body %></p>
  <%= render "comments/comment_form" %>
  <div id="comments" data-blog-id="<%= @blog.id %>">
    <%= render @blog.comments %>
  </div>
</div>
