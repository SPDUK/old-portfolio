<div class="blog-post">
  <h2 class="blog-post-title"><%= link_to blog.title.upcase, blog %></h2>
  <p class="blog-post-meta">Published <%= distance_of_time_in_words(blog.created_at, Time.now) %> ago</p>
  <% if logged_in?(:site_admin) %>
    <%= link_to 'Edit', edit_blog_path(blog) %>
    <%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
  <p><%= blog.body %></p>
</div>
<td><%= link_to 'Edit', edit_blog_path(blog) if logged_in?(:site_admin) %></td>
<td>
  <%= link_to 'Destroy', blog, 
    method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %>
</td>
