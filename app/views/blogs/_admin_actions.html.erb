<% if logged_in?(:site_admin) %>
  <i class="ml-auto mr-3"><%= @blog.status %></i>
  <%= link_to blog_status_icon(@blog), toggle_status_blog_path(@blog), class: "mr-3" %>
  <%= link_to fa_icon('pencil'),  edit_blog_path(@blog), class: "mr-3" %>
  <%= link_to fa_icon('trash'),
         @blog, method: :delete,
         data: {confirm: "Are you sure you want to delete this blog post?"} %>
<% end %>
